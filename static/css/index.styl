@import "/style/common.styl";

html
  background-color #f1f7f7
.lv-list
  li
    margin-bottom rem(14)
    background-color #fff
  .title
    padding 0 rem(20)
    line-height rem(80)
    font-size rem(36)
  .pic
    position relative
    height rem(422)
    overflow hidden
    p
      height rem(422)
      background-color #eee
    em
      position absolute
      top rem(32)
      right rem(24)
      padding rem(4) rem(16)
      border solid 1px #fff
      border-radius rem(10)
      color #fff
      text-shadow 1px 1px 1px rgba(0,0,0,0.7)
      box-shadow 1px 1px 1px rgba(0,0,0,0.7)
      font-size rem(32)
  .other
    padding rem(16) rem(20)
    color #22e3d5
    span
      float left
      line-height rem(54)
      font-size rem(32)
    em
      float right
      background-color #ff9000
      color #fff
      padding rem(6) rem(16)
      border-radius rem(10)
      font-size rem(28)
    
.lv-more
  padding rem(30)
  span
    display block
    margin auto
    width rem(400)
    padding rem(20) 0
    text-align center
    background-color #fff
    border-radius rem(10)
    color #666

